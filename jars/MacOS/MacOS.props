plugin.macos.MacOSPlugin.activate=startup
plugin.macos.MacOSPlugin.option-pane=MacOSPlugin
plugin.macos.MacOSPlugin.menu.code=new macos.menu.MacOSMenu();

#
# Plugin info
#
plugin.macos.MacOSPlugin.name=Mac OS Plugin
plugin.macos.MacOSPlugin.author=Kris Kopicki
plugin.macos.MacOSPlugin.version=3.1
plugin.macos.MacOSPlugin.docs=MacOS.html

#
# Dependencies
#
plugin.macos.MacOSPlugin.depend.0=jedit 04.02.01.00
plugin.macos.MacOSPlugin.depend.1=jdk 1.4.1

MacOSPlugin.depend.os.name=Mac OS X
MacOSPlugin.depend.mrj.version=99

#
# Default settings
#
MacOSPlugin.default.type=1413830740
MacOSPlugin.default.creator=1246057296
MacOSPlugin.default.useScreenMenuBar=true
MacOSPlugin.default.preserveCodes=true
MacOSPlugin.default.useSelection=false
MacOSPlugin.default.setTypeCreator=false

#
# Options dialog
#
options.MacOSPlugin.code=new macos.MacOSOptionPane();
options.MacOSPlugin.label=Mac OS Settings
options.MacOSPlugin.menubar.label=Enable Mac OS style menubar
options.MacOSPlugin.preserve.label=Preserve existing file/creator codes on save
options.MacOSPlugin.scripts.label=Script folder search depth:
options.MacOSPlugin.useSelection.label=Use system highlight colour for Text Area
options.MacOSPlugin.setTypeCreator.label=Save the file type/creator on save

#
# Error dialogs
#
MacOSPlugin.dialog.osname.message=Mac OS Plugin can only be used with Mac OS X.
MacOSPlugin.dialog.mrjversion.title=error
MacOSPlugin.dialog.mrjversion.message=Mac OS Plugin requires a newer version of Java (MRJ {0}).
MacOSPlugin.dialog.script.title=Script Error

#
# Menus
#
MacOSPlugin.menu.label=Mac OS
MacOSPlugin.menu.showCurrent=Show Current Buffer In Finder
MacOSPlugin.menu.showCurrentDir=Show Current Folder In Finder
MacOSPlugin.menu.buffers.label=Show Buffer In Finder
MacOSPlugin.menu.buffers.none=No Saved Buffers
MacOSPlugin.menu.macros.label=Macros
MacOSPlugin.menu.macros.none=No Macros
MacOSPlugin.menu.newView=New View
MacOSPlugin.menu.recent.label=Show Recent File In Finder
MacOSPlugin.menu.recent.none=No Recent Items
MacOSPlugin.menu.recentDir.label=Show Recent Folder In Finder
MacOSPlugin.menu.recentDir.none=No Recent Folders

#
# Misc
#
macro-handler.applescript.label=AppleScript
macro-handler.applescript.glob=*.[scpt,applescript]